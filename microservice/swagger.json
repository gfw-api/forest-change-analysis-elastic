              "required": true,
              "type": "string"
            },
            {
              "name": "period",
              "in": "query",
              "description": "Time period in format" """YYYY-MM-DD,YYYY-MM-DD""",
              "required": true,
              "type": "string"
            },
            {
              "name": "gladConfirmOnly",
              "in": "query",
              "description": "Confine alert count to confirmed alerts only by setting this parameter equal to True",
              "required": false,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "Alerts obtained successfully",
